  "keywords": [
    "noaa",
    "northern lights",
    "aurora borealis"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrmenne/ioBroker.aurora-borealis.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.1.1",
